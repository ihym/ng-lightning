doctype html
html(lang='en')
  head
    - var title = "Lightning Design System for Angular";
    - var description = "Native Angular components and directives for Lightning Design System";
    - var logo = "/assets/images/shield.svg";

    base(href='/')
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    link(rel="shortcut icon", type="image/x-icon", href="favicon.ico")
    title #{title} - NG-LIGHTNING

    // Search Engine
    meta(name="description", content=`${description}: ${self.components}`)
    meta(name="image", content=logo)

    // Schema.org for Google
    meta(itemprop="name", content=title)
    meta(itemprop="description", content=`${description}: ${self.components}`)
    meta(itemprop="image", content=logo)

    // Twitter
    meta(name="twitter:card", content="summary")
    meta(name="twitter:title", content=title)
    meta(name="twitter:description", content=`${description}: ${self.components}`)

    // Open Graph general (Facebook, Pinterest & Google+)
    meta(name="og:title", content=title)
    meta(name="og:description", content=`${description}: ${self.components}`)
    meta(name="og:url", content="https://ng-bootstrap.github.io")
    meta(name="og:site_name", content="ng-bootstrap")
    meta(name="og:locale", content="en")
    meta(name="og:type", content="website")
    meta(property="og:image", content=logo)
    meta(property="og:image:type", content="image/svg+xml")

    script(type="application/javascript", src="https://unpkg.com/svg4everybody")
    script(type="application/javascript").
      svg4everybody()
