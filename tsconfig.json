{
  "compilerOptions": {
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "ES5",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "noEmitHelpers": true,
    "sourceMap": true,
    "outDir": "./dist",
    "declaration": true
  },
  "exclude": [
    "node_modules",
    "!node_modules/@types"
  ],
  "types": [
    "core-js",
    "jasmine",
    "node",
    "tether"
  ],
  "compileOnSave": false,
  "buildOnSave": false
}
